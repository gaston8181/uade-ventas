<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<constant name="struts.devMode" value="true" />

	<package name="default" namespace="/" extends="struts-default">
		<result-types>
			<result-type name="tiles"
				class="org.apache.struts2.views.tiles.TilesResult" />
		</result-types>

		<default-action-ref name="inicio" />
		<action name="inicio" class="ar.com.uade.action.InicioAction">
			<result name="success" type="tiles">inicio</result>
		</action>

		<!-- PRODCUTOS -->
		<action name="altaProducto" class="ar.com.uade.action.ProductoAction">
			<result name="success" type="tiles">altaProducto</result>
		</action>
		<action name="bajaProducto" class="ar.com.uade.action.ProductoAction">
			<result name="success" type="tiles">bajaProducto</result>
		</action>
		<action name="cargarProducto" class="ar.com.uade.action.ProductoAction">
			<result name="success" type="tiles">cargarProducto</result>
		</action>
		<action name="consultarProducto" class="ar.com.uade.action.ProductoAction">
			<result name="success" type="tiles">consultarProducto</result>
		</action>
		<action name="modificarProducto" class="ar.com.uade.action.ProductoAction">
			<result name="success" type="tiles">modificarProducto</result>
		</action>

		<!-- PROVEEDORES -->
		<action name="altaProveedor" class="ar.com.uade.action.ProveedorAction">
			<result name="success" type="tiles">altaProveedor</result>
		</action>
		<action name="bajaProveedor" class="ar.com.uade.action.ProveedorAction">
			<result name="success" type="tiles">bajaProveedor</result>
		</action>
		<action name="modificarProveedor" class="ar.com.uade.action.ProveedorAction">
			<result name="success" type="tiles">modificarProveedor</result>
		</action>

		<!-- REPORTES -->
		<action name="reporteAnual" class="ar.com.uade.action.ReporteAction">
			<result name="success" type="tiles">reporteAnual</result>
		</action>
		<action name="reporteDosFechas" class="ar.com.uade.action.ReporteAction">
			<result name="success" type="tiles">reporteEntreFechas</result>
		</action>
		<action name="reporteMensual" class="ar.com.uade.action.ReporteAction">
			<result name="success" type="tiles">reporteMensual</result>
		</action>
		<action name="reporteSemanal" class="ar.com.uade.action.ReporteAction">
			<result name="success" type="tiles">reporteSemanal</result>
		</action>


		<!-- VENDEDOR -->
		<action name="altaVendedor" class="ar.com.uade.action.VendedorAction">
			<result name="success" type="tiles">altaVendedor</result>
		</action>
		<action name="bajaVendedor" class="ar.com.uade.action.VendedorAction">
			<result name="success" type="tiles">bajaVendedor</result>
		</action>
		<action name="modificarVendedor" class="ar.com.uade.action.VendedorAction">
			<result name="success" type="tiles">modificarVendedor</result>
		</action>

	<!-- VENTAS -->
		<action name="cerrarVenta" class="ar.com.uade.action.VentaAction">
			<result name="success" type="tiles">cerrarCaja</result>
		</action>
		<action name="gestionarCambio" class="ar.com.uade.action.VentaAction">
			<result name="success" type="tiles">gestionarCambio</result>
		</action>
		<action name="nuevaVenta" class="ar.com.uade.action.VentaAction">
			<result name="success" type="tiles">nuevaVenta</result>
		</action>

	</package>


</struts>